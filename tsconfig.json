{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strictPropertyInitialization": false
   },
   "include": [
      "./src/**/*"
   ],
   "exclude": [
      "node_modules"
   ]
}